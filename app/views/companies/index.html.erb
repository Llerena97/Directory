<h1>Companies List</h1> <%= link_to "New Company", new_company_path %>
<div style="border: black solid">
  <% @companies.each do |company| %>
    <h2><%= link_to company.name, company %></h2>
    <h4><%= company.address %></h4>
    <h4><%= company.commercial_activity %></h4>
    <%= link_to "Delete", company, method: :delete %>
  <% end %>
</div>